{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Pico Debug",
			"cwd": "${workspaceRoot}",
			"executable": "${command:cmake.launchTargetPath}",
			"request": "launch",
			"type": "cortex-debug",
			"showDevDebugOutput": "raw",
			"servertype": "openocd",
			// This may need to be arm-none-eabi-gdb depending on your system
			"gdbPath": "arm-none-eabi-gdb",
			"device": "RP2040",
			"configFiles": [
				//"interface/jlink.cfg",
				"interface/picoprobe.cfg",
				"target/rp2040.cfg"
			],
			"svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
			// Work around for stopping at main on restart
			"postRestartCommands": [
				"monitor gdb_sync",
                "stepi"
				//"continue"
			],
			"postLaunchCommands": [
				"monitor gdb_sync",
                "stepi"
				//"continue"
			],
			"searchDir": [
				"C:/msys64/home/tyler.hopaluk/openocd/tcl"
			],
		}
	]
}